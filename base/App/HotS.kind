App.HotS.take_team(team: String, captains: Map<Nat>): Pair<Map<Nat>, Map<Nat>>
  let pair = {Map.new<Nat>, captains}
  for captain:cash in captains with pair:
    let user = pair@fst
    let rest = pair@snd
    if team =? captain then
      {(user{team} <- cash), (Map.delete<Nat>(captain, rest))}
    else
      pair
  pair

